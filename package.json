{
  "name": "snip-it",
  "version": "1.0.0",
  "description": "A browser extension to snip code blocks and text selections from web pages. The tools lets you save and organize your code snippets in the cloud.",
  "main": "index.js",
  "scripts": {
    "build": "./bin/build",
    "build-safari": "./bin/build-safari",
    "build-safari-js": "./bin/build-safari-js",
    "build-safari-css": "./bin/build-safari-css",
    "build-chrome": "./bin/build-chrome",
    "build-chrome-js": "./bin/build-chrome-js",
    "build-chrome-css": "./bin/build-chrome-css",
    "build-all-js": "npm run build-safari-js && npm run build-chrome-js",
    "build-all-css": "npm run build-safari-css && npm run build-chrome-css",
    "check": "jslint --edition=latest src/*.js || true"
  },
  "keywords": [
    "snip",
    "code",
    "dev",
    "tools",
    "browser",
    "extension",
    "code",
    "blocks",
    "developer",
    "tool",
    "organize"
  ],
  "author": "Andrei Duca <duca.andrei@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel": "6.5.2",
    "babel-cli": "6.9.0",
    "babel-preset-es2015": "6.9.0",
    "babelify": "7.3.0",
    "browserify": "13.0.1",
    "clean-css": "3.4.18",
    "jslint": "0.10.1",
    "node-sass": "3.7.0",
    "uglify-js": "2.6.2"
  }
}
